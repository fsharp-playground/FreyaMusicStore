@using FreyaMusicStore
@{
    Layout = "layout";
}

@{
    var cartId = 
        ViewBag.UserName ??
        ViewBag.CartId ??
        System.Guid.NewGuid().ToString("N");
}

@section Main
{
<h2>@Model.Title</h2>

<p>
    <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
</p>

<div id="album-details">
    <p>
        <em>Genre:</em>
        @Model.Genre
    </p>
    <p>
        <em>Artist:</em>
        @Model.Artist
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <form method="POST" action="@String.Format(Uris.cart, cartId)" >
        <input hidden="hidden" name="AlbumId" value="@Model.AlbumId" />
        <input type="submit" class="button" value="Add to cart" />
    </form>
    <!--<p class="button">
        <a id="addToCart" href="#">Add to cart</a>
    </p>-->
</div>

<script>
    $('#button').click(function () {
        var success = function () {

        };
        $.ajax({
            type: "POST",
            url: "@Uris.cart",
            success: success
        });
    });
</script>
}